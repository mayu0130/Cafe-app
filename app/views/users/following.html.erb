<% content_for(:title, t('.title')) %>
<div class="bg-cream">
  <div class="container mx-auto pt-10 h-screen">
    <h1 class="text-2xl font-bold mb-6 text-center text-brown">
      <%= @user.profile&.nickname || @user.display_name %> がフォローしているユーザー
    </h1>
    <% if @following_users.any? %>
      <ul class="space-y-4 max-w-md mx-auto">
        <% @following_users.each do |user| %>
          <li class="bg-white border border-gray-300 rounded-lg p-4 shadow-sm flex items-center space-x-4">
            <% if user.profile&.avatar&.attached? %>
              <%= image_tag url_for(user.profile.avatar), class: 'w-8 h-8 rounded-full mr-2' %>
            <% else %>
              <i class="fa-regular fa-circle-user fa-xl text-brown mr-2"></i>
            <% end %>
            <p class="text-gray-700 font-bold">
              <%= link_to (user.profile&.nickname || user.display_name), account_path(user), class: 'text-gray-700 hover:text-gray-400 font-medium text-lg' %>
            </p>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p class="text-gray-600 text-center mt-6">フォローしているユーザーがいません</p>
    <% end %>
  </div>
</div>
