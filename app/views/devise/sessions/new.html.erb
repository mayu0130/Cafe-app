<% content_for(:title, t('.sign_in')) %>
<div class="flex items-center justify-center min-h-screen bg-cream">
  <div class="w-full max-w-md p-6 bg-white rounded-lg mt-[-8rem] border border-brown">
    <h2 class="text-2xl text-brown font-bold text-center mb-4"><%= t('.sign_in') %></h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-4" }) do |f| %>
      <div class="mb-4">
        <%= f.label :email, class: "block text-gray-700 font-bold" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 block w-full px-3 py-2 bg-cream border border-gray-300 rounded-md shadow-sm focus:outline-none sm:text-sm" %>
      </div>

      <div class="mb-4">
        <%= f.label :password, class: "block text-gray-700 font-bold" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "mt-1 block w-full px-3 py-2 bg-cream border border-gray-300 rounded-md shadow-sm focus:outline-none sm:text-sm" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="mb-4 flex items-center">
          <%= f.check_box :remember_me, class: "mr-2 checkbox checkbox-sm border-brown [--chkbg:theme(colors.brown)] [--chkfg:white] checked:border-white" %>
          <%= f.label :remember_me, class: "text-14 text-brown font-bold" %>
        </div>
      <% end %>

      <div class="actions flex justify-center">
        <%= f.submit t('helpers.submit.signin'), class: "btn bg-teal text-white w-full text-lg" %>
      </div>
    <% end %>

    <div class="divider mx-auto">または</div>
      <!-- Google ログイン -->
      <%= link_to user_google_oauth2_omniauth_authorize_path, method: :post , data: { turbo: false } do %>
        <button class="flex items-center justify-center gap-2 px-4 py-2 w-full border border-gray-300 rounded-lg shadow-sm hover:bg-gray-100 transition">
          <svg class="w-5 h-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 48 48">
            <path fill="#EA4335" d="M24 9.5c3.54 0 6.71 1.22 9.21 3.6l6.85-6.85C35.9 2.38 30.47 0 24 0 14.62 0 6.51 5.38 2.56 13.22l7.98 6.19C12.43 13.72 17.74 9.5 24 9.5z"/>
            <path fill="#4285F4" d="M46.98 24.55c0-1.57-.15-3.09-.38-4.55H24v9.02h12.94c-.58 2.96-2.26 5.48-4.78 7.18l7.73 6c4.51-4.18 7.09-10.36 7.09-17.65z"/>
            <path fill="#FBBC05" d="M10.53 28.59c-.48-1.45-.76-2.99-.76-4.59s.27-3.14.76-4.59l-7.98-6.19C.92 16.46 0 20.12 0 24c0 3.88.92 7.54 2.56 10.78l7.97-6.19z"/>
            <path fill="#34A853" d="M24 48c6.48 0 11.93-2.13 15.89-5.81l-7.73-6c-2.15 1.45-4.92 2.3-8.16 2.3-6.26 0-11.57-4.22-13.47-9.91l-7.98 6.19C6.51 42.62 14.62 48 24 48z"/>
            <path fill="none" d="M0 0h48v48H0z"/>
          </svg>
          <span class="text-sm font-medium text-gray-700">Sign in with Google</span>
        </button>
      <% end %>

    <div class="flex flex-col items-center justify-center mt-4 space-y-2">
      <%= render "devise/shared/links", class: "text-center text-sm" %>
    </div>
  </div>
</div>
