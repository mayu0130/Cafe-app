<div class="bg-cream">
  <div class="container mx-auto pt-10">
  <h1 class="text-brown text-2xl font-bold mb-3"><%= @tag.name %> のタグに関連する投稿</h1>
    <%= link_to new_post_path, class: 'flex items-center' do %>
      <i class="fa fa-plus text-brown text-2xl"></i>
      <span class="text-brown text-xl font-bold ml-2">投稿する</span>
    <% end %>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 pt-8 pb-8">
      <% @posts.each do |post| %>
      <%= render 'commons/post', post: post %>
      <% end %>
    </div>
  </div>
  <%= link_to new_post_path do %>
    <div class="bg-teal border-4 border-white p-4 rounded-full shadow-lg fixed bottom-2 right-2 flex items-center justify-center w-16 h-16">
      <i class="fa fa-plus text-white text-2xl"></i>
    </div>
  <% end %>
</div>