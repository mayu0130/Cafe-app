<div class="animate-fade-in-4">
  <%= link_to post_path(post), class: 'block transition-transform duration-200 hover:scale-105' do %>
    <div class="rounded-lg overflow-hidden bg-white">
      <% if post.image.present? %>
        <%= image_tag post.image, class: 'h-48 w-full object-cover' %>
      <% else %>
        <%= image_tag 'eyecatch.png', class: 'h-48 w-full object-cover' %>
      <% end %>
  <% end %>

    <%= link_to post_path(post) do %>
      <div class="p-4">
        <h2 class="text-brown font-bold hover:opacity-70 text-lg md:text-xl">
          <%= post.cafe_name %>
        </h2>
    <% end %>

        <div class="mt-2 flex items-center">
          <%= link_to account_path(post.user), class: 'flex items-center' do %>
            <div class="flex items-center">
              <% if post.user.profile&.avatar&.attached? %>
                <%= image_tag url_for(post.user.profile.avatar), class: 'w-8 h-8 rounded-full mr-1 md:mr-2 hover:opacity-70' %>
              <% else %>
                <i class="fa-regular fa-circle-user fa-xl text-brown mr-1 md:mr-2 hover:opacity-70"></i>
              <% end %>
              <p class="text-sm md:text-base text-gray-700 font-bold hover:opacity-70">
                <%= post.user.profile&.nickname || post.user.display_name %>
              </p>
            </div>
          <% end %>
        </div>

        <p class="text-sm md:text-base text-gray-500 mt-1">
          <%= post.created_at.strftime("%Y/%m/%d %H:%M") %>
        </p>
      </div>
    </div>
</div>
