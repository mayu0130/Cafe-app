<body class="bg-cream">
  <div class="container mx-auto mt-8 mb-12 px-40 py-6">
    <%= form_with(model: @profile, url: profile_path, method: 'put', local: true) do |f| %>

      <div class="mb-4">
        <%= f.label :nickname, 'ニックネーム', class: 'block text-brown font-semibold mb-2' %>
        <%= f.text_field :nickname, class: 'border border-gray-200 rounded-lg w-full p-2' %>
      </div>

      <div class="mb-4">
        <%= f.label :birthday, '生年月日', class: 'block text-brown font-semibold mb-2' %>
        <%= f.date_field :birthday, class: 'border border-gray-200 rounded-lg w-full p-2'%>
      </div>

      <div class="mb-4">
        <%= f.label :mbti, 'MBTI', class: 'block text-brown font-semibold mb-2' %>
        <%= f.text_field :mbti, class: 'border border-gray-200 rounded-lg w-full p-2' %>
      </div>

      <div class="mb-4">
        <%= f.label :address, '居住地', class: 'block text-brown font-semibold mb-2' %>
        <%= f.text_field :address, class: 'border border-gray-200 rounded-lg w-full p-2' %>
      </div>

      <div class="mb-4">
        <%= f.label :introduction, '自己紹介', class: 'block text-brown font-semibold mb-2' %>
        <%= f.text_area :introduction, class: 'border border-gray-200 rounded-lg w-full p-2' %>
      </div>

      <div class="mb-4">
        <%= f.label :x_link, 'X URL', class: 'block text-brown font-semibold mb-2' %>
        <%= f.text_field :x_link, class: 'border border-gray-200 rounded-lg w-full p-2' %>
      </div>

      <div class="mb-4">
        <%= f.label :instagram_link, 'Instagram URL', class: 'block text-brown font-semibold mb-2' %>
        <%= f.text_field :instagram_link, class: 'border border-gray-200 rounded-lg w-full p-2' %>
      </div>

      <div class="flex justify-center">
        <%= f.submit '保存', class: 'bg-teal text-white font-bold mt-8 py-2 px-14 rounded-lg hover:bg-opacity-70 max-w-xs' %>
      </div>
    <% end %>
  </div>
</body>
